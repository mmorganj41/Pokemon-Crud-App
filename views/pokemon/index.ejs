<%- include('../partials/header') %>

	<h1>Pokemon List</h1>
	<table id="pokemonlist">
		<tr class="headers">
			<th>Pokemon</th>
			<th>Image</th>
			<th>Nickname</th>
			<th>Level</th>
			<th>Trainer</th>
		</tr>
		<% pokemon.forEach(p => { %>
			<tr>
				<td><a href="/pokemon/<%= p._id %>"><%= p.name[0].toUpperCase() + p.name.substring(1, p.name.length) %></a></td>
				<td><img src="<%= p.images[0] %> " alt="sprite"></td>
				<td><%= p.nickname %></td>
				<td><%= p.level %> </td>
				<td><%= p.trainer %> </td>
			</tr>
		<% }) %>
	</div>

<%- include('../partials/footer') %>