<%- include('../partials/header') %>
	<h1>Battle an Opponent</h1>
	<div id="battle">
		<%- include('../partials/pokeshow') %>
		<div>
			<table id="pokemonlist">
				<tr class="headers">
					<th>Pokemon</th>
					<th>Level</th>
					<th>Types</th>
					<th>Stats</th>
				</tr>
				<% opponents.forEach(p => { %>
					<tr>
						<td><a href="/pokemon/<%= p._id %>"><%= p.name[0].toUpperCase() + p.name.substring(1, p.name.length) %></a></td>
						<td><%= p.level %> </td>
						<td><% p.types.forEach(type => { %>
							<div><%= type %> </div>
						<% }) %></td>
						<td><table>
							<tr>
								<th><%= p.hp %></th>
								<th><%= p.attack %></th>
								<th><%= p.defense %></th>
								<th><%= p.speed %></th>
								<th><%= p.specialAttack %></th>
								<th><%= p.specialDefense %></th>
							</tr>
						</table></td>
						<td><form action="/pokemon/<%= pokemon._id %>/battle/<%= p._id %>">
							<input type="submit" value="Battle!" />
						</form>
						</td>
					</tr>
				<% }) %>
			</table>
		</div>
	</div>

<%- include('../partials/footer') %>